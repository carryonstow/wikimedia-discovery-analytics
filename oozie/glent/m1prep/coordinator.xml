<?xml version="1.0" encoding="UTF-8"?>
<coordinator-app xmlns="uri:oozie:coordinator:0.4"
    name="discovery-glent-${glent_action}-coord"
    frequency="${coord:days(7)}"
    start="${start_time}"
    end="${stop_time}"
    timezone="Universal">

    <!-- NOTE: You cannot override coordinator.properties values here -->
    <parameters>
        <!-- Required oozie properties. -->
        <property><name>workflow_file</name></property>
        <property><name>start_time</name></property>
        <property><name>stop_time</name></property>

        <!-- Required glent properties -->
        <property><name>send_error_email_address</name></property>
    </parameters>

    <controls>
        <!-- Never timeout materialized jobs -->
        <timeout>-1</timeout>

        <!-- Allow up to this many backfill jobs in parallel -->
        <concurrency>1</concurrency>

        <!-- Limit to this many unstarted materialized jobs -->
        <throttle>2</throttle>
    </controls>

    <datasets>
        <include>${glent_datasets_file}</include>
    </datasets>

    <input-events>

        <data-in name="event_cirrus_input" dataset="event_cirrus">
            <!-- TODO: One week is not always 168 hours -->
            <start-instance>${coord:current(-168)}</start-instance>
            <end-instance>${coord:current(0)}</end-instance>
        </data-in>
        <data-in name="glent_m1prep_prev_input" dataset="glent_m1prep">
            <instance>${coord:current(-1)}</instance>
        </data-in>
    </input-events>

    <output-events>
        <data-out name="glent_m1prep_output" dataset="glent_m1prep">
            <instance>${coord:current(0)}</instance>
        </data-out>
    </output-events>

    <action>
        <workflow>
            <app-path>${workflow_file}</app-path>
            <configuration>
                <property>
                    <name>current_instance</name>
                    <value>${coord:formatTime(coord:nominalTime(), "yyyy-MM-dd'T00:00:00Z'")}</value>
                </property>
                <property>
                    <name>previous_instance</name>
                    <value>${coord:formatTime(coord:dateOffset(coord:nominalTime(), -7, 'DAY'), "yyyy-MM-dd'T00:00:00Z'")}</value>
                </property>
                <property>
                    <name>earliest_instance</name>
                    <value>${coord:formatTime(coord:dateOffset(coord:nominalTime(), -84, 'DAY'), "yyyy-MM-dd'T00:00:00Z'")}</value>
                </property>
                <property>
                    <name>current_partition</name>
                    <value>${coord:formatTime(coord:nominalTime(), "yyyyMMdd")}</value>
                </property>
                <property>
                    <name>previous_partition</name>
                    <value>${coord:formatTime(coord:dateOffset(coord:nominalTime(), -7, 'DAY'), "yyyyMMdd")}</value>
                </property>
                <property>
                    <name>mark_dataset_done_directory</name>
                    <value>${glent_data_directory}/${glent_action}/part=${coord:formatTime(coord:nominalTime(), "yyyyMMdd")}</value>
                </property>
            </configuration>
        </workflow>
    </action>
</coordinator-app>
