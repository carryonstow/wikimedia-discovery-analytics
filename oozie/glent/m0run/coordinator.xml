<?xml version="1.0" encoding="UTF-8"?>
<coordinator-app xmlns="uri:oozie:coordinator:0.4"
    name="discovery-glent-${glent_action}-coord"
    frequency="${coord:days(7)}"
    start="${start_time}"
    end="${stop_time}"
    timezone="Universal">

    <!-- NOTE: You cannot override coordinator.properties values here -->
    <parameters>
        <!-- Required oozie properties. -->
        <property><name>workflow_file</name></property>
        <property><name>start_time</name></property>
        <property><name>stop_time</name></property>

        <!-- Required glent properties -->
        <property><name>send_error_email_address</name></property>
    </parameters>

    <controls>
        <!-- Never timeout materialized jobs -->
        <timeout>-1</timeout>

        <!-- Allow up to this many backfill jobs in parallel -->
        <concurrency>2</concurrency>

        <!-- Limit to this many unstarted materialized jobs -->
        <throttle>2</throttle>
    </controls>

    <datasets>
        <include>${glent_datasets_file}</include>
    </datasets>

    <input-events>
        <data-in name="glent_m0prep_input" dataset="glent_m0prep">
            <instance>${coord:current(0)}</instance>
        </data-in>
    </input-events>

    <output-events>
        <data-out name="glent_m0run_output" dataset="glent_m0run">
            <instance>${coord:current(0)}</instance>
        </data-out>
    </output-events>

    <action>
        <workflow>
            <app-path>${workflow_file}</app-path>
            <configuration>
                <property>
                    <name>current_partition</name>
                    <value>${coord:formatTime(coord:nominalTime(), "yyyyMMdd")}</value>
                </property>
                <property>
                    <name>mark_dataset_done_directory</name>
                    <value>${glent_data_directory}/suggestions/algo=${glent_action}/part=${coord:formatTime(coord:nominalTime(), "yyyyMMdd")}</value>
                </property>
            </configuration>
        </workflow>
    </action>
</coordinator-app>
